{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "blocks": {
      "utk-wds/accordion": {
        "color": {
          "palette": [
            {
              "slug": "white",
              "color": "#FFFFFF",
              "name": "White"
            },
            {
              "slug": "gray",
              "color": "#CCCCCC",
              "name": "Gray"
            }
          ]
        }
      },
      "core/navigation": {
        "typography": {
          "textDecoration": false
        }
      },
      "core/button": {
        "border": {
          "radius": false
        },
        "elements": {
          "link": {
            "typography": {
              "textDecoration": false
            }
          }
        }
      },
      "core/heading": {
        "color": {
          "palette": [
            {
              "slug": "smokey",
              "color": "#4b4b4b",
              "name": "Web Smokey"
            },
            {
              "slug": "light",
              "color": "#f6f6f6",
              "name": "Light"
            },
            {
              "slug": "gray2",
              "color": "#e0e0e0",
              "name": "Gray 2"
            },
            {
              "slug": "white",
              "color": "#ffffff",
              "name": "White"
            }
          ]
        }
      },
      "core/paragraph": {
        "color": {
          "palette": [
            {
              "slug": "smokey",
              "color": "#4b4b4b",
              "name": "Web Smokey"
            },
            {
              "slug": "light",
              "color": "#f6f6f6",
              "name": "Light"
            },
            {
              "slug": "gray2",
              "color": "#e0e0e0",
              "name": "Gray 2"
            },
            {
              "slug": "white",
              "color": "#ffffff",
              "name": "White"
            }
          ]
        }
      }
    },
    "color": {
      "custom": false,
      "customGradient": false,
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        {
          "slug": "orange",
          "color": "#ff8200",
          "name": "Orange"
        },
        {
          "slug": "smokey",
          "color": "#4b4b4b",
          "name": "Web Smokey"
        },
        {
          "slug": "light",
          "color": "#f6f6f6",
          "name": "Light"
        },
        {
          "slug": "gray2",
          "color": "#e0e0e0",
          "name": "Gray 2"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        }
      ],
      "gradients": [
        {
          "slug": "clear-to-orange",
          "gradient": "linear-gradient(180deg,rgba(255,255,255,0) 43%,rgb(255,130,0) 43%)",
          "name": "Horizontal clear to solid orange"
        },
        {
          "slug": "clear-to-white",
          "gradient": "linear-gradient(180deg,rgba(255,255,255,0) 43%,rgb(255,255,255) 43%)",
          "name": "Horizontal clear to solid white"
        },
        {
          "slug": "clear-to-light-grey",
          "gradient": "linear-gradient(180deg,rgba(255,255,255,0) 43%,rgb(245,245,245) 43%)",
          "name": "Horizontal clear to light grey"
        },
        {
          "slug": "light-grey-to-white",
          "gradient": "linear-gradient(90deg,rgb(245,245,245) 73%,rgb(255,255,255) 43%)",
          "name": "Vertical light grey to solid white"
        },
        {
          "slug": "light-grey-to-clear",
          "gradient": "linear-gradient(90deg,rgb(245,245,245) 73%,rgba(255,255,255,0) 73%)",
          "name": "Vertical light grey to clear"
        },
        {
          "slug": "white-to-clear",
          "gradient": "linear-gradient(90deg,rgb(255,255,255) 73%,rgba(255,255,255,0) 73%)",
          "name": "Vertical white to clear"
        }
      ]
    },
    "layout": {
      "contentSize": "960px",
      "wideSize": "1500px"
    },
    "typography": {
      "dropCap": false,
      "fluid": true,
      "fontFamilies": [
        {
          "fontFamily": "'Montserrat', 'Helvetica Neue', Helvetica, Arial, system-ui, -apple-system, sans-serif",
          "name": "Montserrat",
          "slug": "primary",
          "fontFace": [
            {
              "fontDisplay": "block",
              "fontFamily": "Montserrat",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "200 400 600 700 800 900",
              "src": ["file:./assets/fonts/Montserrat-VariableFont_wght.ttf"]
            },
            {
              "fontDisplay": "block",
              "fontFamily": "Montserrat",
              "fontStretch": "normal",
              "fontStyle": "italic",
              "fontWeight": "200 400 600 700 800 900",
              "src": [
                "file:./assets/fonts/Montserrat-Italic-VariableFont_wght.ttf"
              ]
            }
          ]
        },
        {
          "fontFamily": "monospace",
          "name": "Monospace",
          "slug": "monospace"
        }
      ],
      "fontSizes": [
        {
          "name": "X-Small",
          "slug": "x-small",
          "size": "1rem",
          "fluid": {
            "min": "1rem",
            "max": "1rem"
          }
        },
        {
          "name": "Small",
          "slug": "small",
          "size": "1.125rem",
          "fluid": {
            "min": "1.125rem",
            "max": "1.125rem"
          }
        },
        {
          "name": "Normal",
          "slug": "normal",
          "size": "1.25rem",
          "fluid": {
            "min": "1.25rem",
            "max": "1.25rem"
          }
        },
        {
          "name": "Medium",
          "slug": "medium",
          "size": "1.85rem",
          "fluid": {
            "min": "1.25rem",
            "max": "1.85rem"
          }
        },
        {
          "name": "Large",
          "slug": "large",
          "size": "2.515rem",
          "fluid": {
            "min": "1.51375rem",
            "max": "2.515rem"
          }
        },
        {
          "name": "X-Large",
          "slug": "x-large",
          "size": "3.21rem",
          "fluid": {
            "min": "2.05875rem",
            "max": "3.21rem"
          }
        },
        {
          "name": "XX-Large",
          "slug": "xx-large",
          "size": "4.653rem",
          "fluid": {
            "min": "2.8rem",
            "max": "4.653rem"
          }
        }
      ]
    },
    "spacing": {
      "spacingSizes": [
        {
          "name": "xSmall",
          "size": "20px",
          "slug": "x-small"
        },
        {
          "name": "Small",
          "size": "clamp(30px, 4vw, 40px)",
          "slug": "small"
        },
        {
          "name": "Medium",
          "size": "clamp(40px, 6vw, 60px)",
          "slug": "medium"
        },
        {
          "name": "Large",
          "size": "clamp(50px, 8vw, 80px)",
          "slug": "large"
        },
        {
          "name": "xLarge",
          "size": "clamp(60px, 10vw, 100px)",
          "slug": "x-large"
        }
      ]
    },
    "useRootPaddingAwareAlignments": true,
    "custom": {
      "color": {
        "river": "#1a73c5",
        "hover": "#0d47a1",
        "coolSmokey": "rgba(49,62,72,0.92)"
      },
      "fontWeight": {
        "light": "300",
        "regular": "400",
        "medium": "700",
        "bold": "800",
        "black": "900"
      },
      "lineHeight": {
        "body": 1.5,
        "heading": 1.1,
        "medium": 1.5,
        "large": 1.9,
        "one": 1
      },
      "spacing": {
        "outer": "30px"
      }
    }
  },
  "styles": {
    "blocks": {
      "core/button": {
        "color": {
          "background": "var(--wp--preset--color--white)",
          "text": "var(--wp--custom--color--river)"
        },
        "border": {
          "style": "solid",
          "radius": ".45rem",
          "width": ".125rem",
          "color": "var(--wp--preset--color--orange)"
        },
        "spacing": {
          "padding": {
            "top": ".66em",
            "right": "1.33em",
            "bottom": ".66em",
            "left": "1.33em"
          }
        }
      },
      "core/cover": {},
      "core/heading": {
        "typography": {
          "fontWeight": "var(--wp--custom--font-weight--black)",
          "lineHeight": "var(--wp--custom--line-height--heading)"
        },
        "color": {
          "text": "var(--wp--preset--color--smokey)"
        }
      },
      "core/post-title": {
        "typography": {
          "fontWeight": "var(--wp--custom--font-weight--black)",
          "lineHeight": "var(--wp--custom--line-height--heading)"
        }
      },
      "core/query-title": {
        "typography": {
          "fontWeight": "var(--wp--custom--font-weight--black)",
          "lineHeight": "var(--wp--custom--line-height--heading)"
        }
      }
    },
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--smokey)"
    },
    "elements": {
      "button": {
        "color": {
          "text": "var(--wp--custom--color--river)",
          "background": "var(--wp--preset--color--white)"
        },
        "border": {
          "style": "solid",
          "color": "var(--wp--preset--color--orange)",
          "width": ".125rem",
          "radius": ".45rem"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--custom--color--hover)"
          },
          "typography": {
            "textDecoration": "none"
          }
        },
        ":focus": {
          "color": {
            "text": "var(--wp--custom--color--hover)"
          },
          "typography": {
            "textDecoration": "none"
          }
        },
        ":active": {
          "color": {
            "text": "var(--wp--custom--color--hover)"
          },
          "typography": {
            "textDecoration": "none"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-small)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--custom--color--river)"
        },
        "typography": {
          "textDecoration": "underline"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--smokey)"
          }
        },
        ":active": {
          "color": {
            "text": "var(--wp--preset--color--smokey)"
          }
        },
        ":focus": {
          "color": {
            "text": "var(--wp--preset--color--smokey)"
          }
        }
      }
    },
    "spacing": {
      "blockGap": "30px",
      "padding": {
        "bottom": "0px",
        "left": "var(--wp--preset--spacing--small)",
        "right": "var(--wp--preset--spacing--small)",
        "top": "0px"
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontSize": "var(--wp--preset--font-size--normal)",
      "lineHeight": "var(--wp--custom--line-height--body)"
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    },
    {
      "area": "header",
      "name": "header-no-title",
      "title": "Header No Title"
    },
    {
      "area": "header",
      "name": "header-no-title-no-breadcrumbs",
      "title": "Header No Title No Breadcrumbs"
    },
    {
      "area": "header",
      "name": "header-no-breadcrumbs",
      "title": "Header No Breadcrumbs"
    },
    {
      "area": "footer",
      "name": "footer",
      "title": "Footer"
    }
  ]
}
